			<!-- Only enable if using scm, also quite slow -->
			<!--
				<plugin>
				<groupId>net.sf</groupId>
				<artifactId>stat-scm</artifactId>
				<version>1.2.0</version>
				</plugin>
			-->
		</plugins>
	</reporting>
</project>